<p id="notice"><%= notice %></p>

<h1>食品期限一覧</h1>

<CENTER>
<table>
  <thead>
    <tr>
      <th>登録日</th>
      <th>商品名</th>
      <th>写真</th>
      <th>期限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.date %></td>
        <td><%= todo.title %></td>
        <td><%= todo.image %></td>
        <td><%= todo.limit %></td>
        <td><%= link_to '詳細', todo %></td>
        <td><%= link_to '編集', edit_todo_path(todo) %></td>
        <td><%= link_to '削除', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</CENTER>
<br>

